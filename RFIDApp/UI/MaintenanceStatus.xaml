<UserControl x:Class="RFIDApp.UI.MaintenanceStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RFIDApp.UI"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" FontSize="50" Foreground="White" VerticalAlignment="Top">Maintenance Status</Label>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBox x:Name="txtData" Height="50"></TextBox>
            <Button x:Name="btnConnect" Click="btnConnect_Click">Connect</Button>
            <Button x:Name="btnRead" Click="btnRead_Click">Read</Button>
        </StackPanel>
    </Grid>
</UserControl>
